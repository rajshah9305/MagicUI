# Magic UI Elite Environment Configuration

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_API_KEY=demo-key

# Backend Environment Variables
API_KEY=demo-key
GEMINI_API_KEY=your_gemini_api_key_here
DATABASE_URL=sqlite:///./magicui.db

# Optional: OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Redis URL (for caching and session management)
REDIS_URL=redis://localhost:6379

# Optional: Vercel Configuration
VERCEL_URL=your_vercel_url_here
VERCEL_ENV=development

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn